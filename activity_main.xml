<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B8C7A7"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Header with App Icon and App Name -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#E66C64"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="16dp">

        <!-- App Icon -->
        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@mipmap/ic_launcher" />

        <!-- App Name -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@string/app_name"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Input for Gold Weight -->
    <EditText
        android:id="@+id/editGoldWeight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter gold weight (grams)"
        android:inputType="numberDecimal" />

    <!-- Input for Gold Value -->
    <EditText
        android:id="@+id/editGoldValue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter gold value per gram (RM)"
        android:inputType="numberDecimal" />

    <!-- Radio Group for Gold Type -->
    <RadioGroup
        android:id="@+id/radioGroupGoldType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/radioKeep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Keep" />

        <RadioButton
            android:id="@+id/radioWear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wear" />
    </RadioGroup>

    <!-- Button to Calculate Zakat -->
    <Button
        android:id="@+id/buttonCalculate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#FFC107"
        android:text="Calculate Zakat" />

    <!-- Button to Navigate to About -->
    <Button
        android:id="@+id/buttonAbout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#FFC107"
        android:text="About" />

    <!-- TextView for Total Value -->
    <TextView
        android:id="@+id/textTotalValue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:text="Total Value: " />

    <!-- TextView for Zakat Payable -->
    <TextView
        android:id="@+id/textZakatPayable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:text="Zakat Payable: " />

    <!-- TextView for Total Zakat -->
    <TextView
        android:id="@+id/textTotalZakat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:text="Total Zakat: " />
</LinearLayout>
